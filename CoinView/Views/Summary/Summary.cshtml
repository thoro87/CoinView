
<h4>.Summary</h4>

<div class="SummaryTable">
    <table>
        <tr>
            <td>Invests</td>
            <td class="Number BorderLeft">@Model.SummaryJanis.InvestsSellValueEUR.ToString("C")</td>
            <td class="Number">-@Model.SummaryJanis.InvestsBuyValueEUR.ToString("C")</td>
            <td class="Number BorderLeft @(Model.SummaryJanis.InvestsResultValueEUR >= 0 ? "TextGreen" : "TextRed")">@Model.SummaryJanis.InvestsResultValueEUR.ToString("C")</td>
        </tr>
        <tr>
            <td>Trades</td>
            <td class="Number BorderLeft">@Model.SummaryJanis.TradesSellValueEUR.ToString("C")</td>
            <td class="Number">-@Model.SummaryJanis.TradesBuyValueEUR.ToString("C")</td>
