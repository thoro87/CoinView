            <td class="Number">-@Model.SummaryJanis.CreationsBuyValueEUR.ToString("C")</td>
            <td class="Number BorderLeft @(Model.SummaryJanis.CreationsResultValueEUR >= 0 ? "TextGreen" : "TextRed")">@Model.SummaryJanis.CreationsResultValueEUR.ToString("C")</td>
        </tr>
        <tr class="BorderTop">
            <td>Total</td>
            <td class="Number BorderLeft">@Model.SummaryJanis.SellTotalEUR.ToString("C")</td>
            <td class="Number">-@Model.SummaryJanis.BuyTotalEUR.ToString("C")</td>
            <td class="Number BorderLeft @(Model.SummaryJanis.ResultTotalEUR >= 0 ? "TextGreen" : "TextRed")">@Model.SummaryJanis.ResultTotalEUR.ToString("C")</td>
        </tr>
    </table>
</div>

