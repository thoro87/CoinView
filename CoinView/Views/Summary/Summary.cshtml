@model CoinView.Models.SummaryViewModel

@section InfoArea {
    <div class="InfoArea">
        <table>
            <tr>
                <td></td>
                <td>1h</td>
                <td>24h</td>
                <td>7d</td>
                <td>@Model.InfoArea.BitcoinPriceUSD</td>
                <td class="Timestamp">@Model.InfoArea.Timestamp.ToString()</td>
            </tr>
            <tr>
                <td>BTC</td>
                <td class="@(Model.InfoArea.BitcoinChangePercent1h >= 0 ? "TextGreen" : "TextRed")">@Model.InfoArea.BitcoinChangePercent1h.ToString("P")</td>
                <td class="@(Model.InfoArea.BitcoinChangePercent24h >= 0 ? "TextGreen" : "TextRed")">@Model.InfoArea.BitcoinChangePercent24h.ToString("P")</td>
                <td class="@(Model.InfoArea.BitcoinChangePercent7d >= 0 ? "TextGreen" : "TextRed")">@Model.InfoArea.BitcoinChangePercent7d.ToString("P")</td>
                <td>@Model.InfoArea.BitcoinPriceEUR</td>
                <td></td>
            </tr>
        </table>
    </div>
}

<div class="Content">
    <h4>.Summary</h4>

    @Html.DisplayFor(x => x.UserSummaries)
    <br /><br /><br />

    <div style="margin-left: 18%">
        @Html.DisplayFor(x => x.CombinedSummary)
        <br /><br />
        <button id="toggleEURBTC">EUR <> BTC</button>
        <button type="button" onclick="location.href='@Url.Action("Update", "Summary")'">Update</button>
    </div>
</div>

<script>
    var showEUR = true;
    $("#toggleEURBTC").click(function () { showEUR = !showEUR; updateEURBTC(); });
    updateEURBTC();

    function updateEURBTC() { 
        if (showEUR) {
            $(".SummaryEUR").show();
            $(".SummaryBTC").hide();
        } else { 
            $(".SummaryEUR").hide();
            $(".SummaryBTC").show();
        }
    }

    $(".Content").show();
</script>

